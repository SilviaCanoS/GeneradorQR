<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="Introduce el texto a codificar"
        android:padding="12dp"/>

    <TextView
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Elige el nivel de correcci칩n de errores:"
        android:layout_marginTop="25dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioL7"
            android:text="L - 7%"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioM15"
            android:text="M - 15%"
            android:layout_marginLeft="15dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioQ25"
            android:text="Q - 25%"
            android:layout_marginLeft="15dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioH30"
            android:text="H - 30%"
            android:layout_marginLeft="15dp"/>
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:text="Generar qr"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewVersion"
        android:hint="Versi칩n m치s peque침a posible"
        android:padding="12dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBinario"
        android:hint="En binario"
        android:padding="12dp"
        android:layout_marginTop="5dp"/>

</LinearLayout>